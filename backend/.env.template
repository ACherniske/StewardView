
# Server Configuration
PORT=3001
NODE_ENV=development

# Google Drive API
GOOGLE_APPLICATION_CREDENTIALS=./credentials.json

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
